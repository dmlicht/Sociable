$highlight-color: #E88;
$title-color: #333;
$sub-title-color: #555;

body {
  font-family: "adelle", "helvetica", sans-serif;
  font-size: medium;
  margin: 0;
  background-image: url(<%= asset_path('ricepaper-bg.png') %>);
}

.container {
  width: 800px;
  margin: auto;
  padding: 20px;
}

.field_with_errors label {
  background-color: red;
}


#error_explanation {
  background-color: red;
}

a {
  color: $highlight-color;
  text-decoration: none;
}

p {
  font-size: 1.2em;
}

h1 {
  color: $title-color;
}

section.post {
  background-color: #FFF;
  border-radius: 5px;
  border: 1px solid #ccc;
  text-align: center;
  box-shadow: 1px 1px 2px #ccc;
  -moz-box-shadow: 1px 1px 2px #ccc;
  -webkit-box-shadow: 1px 1px 2px #ccc;
  margin-bottom: 20px;
  padding-bottom: 10px;
  background-image: -webkit-gradient(linear, 0% 0%, 0% 100%, from(#FFFFFF), to(#EDEDED), color-stop(.5,#FFFFFF))
  h1 {
    font-size: 1.2em;
    font-weight: normal;
    color: #333;
  }

  textarea#post_content{
    width: 600px;
    height: 40px;
  }
}

table.posts{
  td {
  }
}

nav ul {
  list-style: none;
  float: right;
  li {
    float: left;
    padding-left: 5px;
    padding-right: 5px;
    a {
      text-decoration: none;
      color: $highlight-color;
      font-size: 1.2em; 
       -webkit-text-shadow: 2px 2px 1px #FFF;
       -moz-text-shadow: 2px 2px 1px #FFF;
       text-shadow: 2px 2px 1px #FFF;
    }
  }
}

hgroup {
  margin-bottom: 40px;
  h1 {
    font-weight: bold;
    font-size: 3.5em;
    margin-bottom: 0px;
    margin-top: 0px;
    a {
      color: $title-color;
      text-decoration: none;
      text-shadow: 5px 5px 1px #FFF;
    }
  }

  h2 {
    font-weight: bold;
    font-size: 1.5em;
    font-style: italic;
    margin-top: 0px;
    padding-top: none;
    color: $sub-title-color;
  }
}

