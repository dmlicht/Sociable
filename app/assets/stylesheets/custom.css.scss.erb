$highlight-color: #E88;
$title-color: #333;
$sub-title-color: #555;
$all-content-width: 960px;
$main-content-width: 740px;
$sidebar-width: 200px;


body {
  font-family: "adelle", "helvetica", sans-serif;
  font-size: medium;
  margin: 0;
  background-color: #FFF;
  background-image: url(<%= asset_path('ricepaper-bg.png') %>);
}

.container {
  width: $all-content-width;
  margin: auto;
  padding-top: 0px;
  padding-left: 40px;
  padding-right: 40px;
}

.field_with_errors label {
  background-color: #FDD;
}

ul {
  list-style: none;
  margin-left: 0px;
  padding-left: 0px;
}



a {
  color: $highlight-color;
  text-decoration: none;
}

p {
  font-size: 1.2em;
}

h1 {
  color: $title-color;
}

section.post {
  textarea#post_content{
    width: 600px;
    height: 40px;
  }
}

table.posts{
  td {
  }
}

header {
}

section{
  background-image: -webkit-gradient(linear, 0% 0%, 0% 100%, from(#FFFFFF), to(#F2F2F2), color-stop(.5,#FFFFFF));
  width: $main-content-width;
  border-radius: 5px;
  border: 1px solid #ccc;
  text-align: center;
  box-shadow: 1px 1px 2px #ccc;
  -moz-box-shadow: 1px 1px 2px #ccc;
  -webkit-box-shadow: 1px 1px 2px #ccc;
  margin-bottom: 20px;
  padding-bottom: 10px;
  h1 {
    font-size: 1.2em;
    font-weight: normal;
    color: #333;
    padding-bottom: 10px;
    border-bottom: 1px solid #ccc;
    margin-bottom: 0px;
  }
}

nav ul {
  list-style: none;
  float: right;
  li {
    float: left;
    padding-left: 5px;
    padding-right: 5px;
    a {
      text-decoration: none;
      color: $highlight-color;
      font-size: 1.2em; 
       -webkit-text-shadow: 2px 2px 1px #FFF;
       -moz-text-shadow: 2px 2px 1px #FFF;
       text-shadow: 2px 2px 1px #FFF;
    }
  }
}

hgroup {
  margin-bottom: 40px;
  h1 {
    font-weight: bold;
    font-size: 3.5em;
    margin-bottom: 0px;
    margin-top: 0px;
    a {
      color: $title-color;
      text-decoration: none;
    }
  }

  h2 {
    font-weight: bold;
    font-size: 1.5em;
    font-style: italic;
    margin-top: 0px;
    padding-top: none;
    color: $sub-title-color;
  }
}

ul.wing-requests {
  padding-left: 0px;
  margin-left: 0px;
  text-align: left;
  margin-top: 0px;
  li {
    border-bottom: 1px dashed #ccc;
    list-style:none;
    margin-top: 0px;
    padding-left: 20px;
    padding-top: 10px;
    padding-bottom: 10px;
    td.user{
    }
    td.accept{
    }
    td.reject{
    }
  }
}


#landing{
  text-align: center;
  p {
  }
  a {
    font-size: 1.4em;
  }
}

section#sidebar {
  width: $sidebar-width;
  float: right;
}

.flash {
  padding: 15px;
  margin-bottom: 15px;
  color: #555;
}

.success {
  background: #DFD;
  border-bottom: 1px solid #CFC;
  border-top: 1px solid #CFC;
}

.notice {
  background: #FFC;
  border-bottom: 1px solid #FFB;
  border-top: 1px solid #FFB;
}

.error {
  background-color: #FDD;
  border-bottom: 1px solid #FCC;
  border-top: 1px solid #FCC;
}

#error_explanation {
  background-color: #FDD;
}
